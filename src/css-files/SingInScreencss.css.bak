body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    margin: auto;
    max-width: 38rem;
    background-image: url('main-images/grey-g9dec26a6e_1280.png');
}

.mainSection{
    position: absolute;
    top: 25%;
    right: 5%;
    width: 100%;
}
  
.logoPortion{
    text-align: center;
    position: absolute;
    left: 20%;
    top: 20%;
    border-right: 5px solid black;
    width: 360px;
    height: 360px;
}

.signInPortion{
    text-align: center;
    position: absolute;
    left: 50%;
}

#uname{
    font-size: large;
    /* background-color: #d1d1d1; */
    border: none;
    border-bottom: 2px solid black;
    margin-bottom: 10%;
    width: 120%;
}

#pword{
    font-size: large;
    /* background-color: #d1d1d1; */
    border: none;
    border-bottom: 2px solid black;
    width: 120%;
}

#submitbtn{
    font-size: x-large;
    background-color: black;
    color: white;
    margin-top: 10%;
    width: 120%;
    border-radius: 20px;
    transition-duration: 0.4s;
    cursor: pointer;
}

#submitbtn:hover, #signupbtn:hover{
    background-color: white;
    color: black;
}  

#submitbtn:active, #signupbtn:active{
    background-color: gray;
    color: black;
} 

#signupbtn{
    font-size: x-large;
    background-color: black;
    color: white;
    width: 120%;
    border-radius: 20px;
    transition-duration: 0.4s;
    cursor: pointer;
}

form{
    width: 120%;
}

a{
    text-decoration: none;
    color: black;
    position: relative;
    left: 55%;
    font-size: small;
}

#rotatingImg{
    width: 200px;
    height: 200px;
    position: relative;
    top: 50px;
}
  
#logoName{
    font-size: xx-large;
}

#orp{
    position: relative;
    left: 10%;
}

#screentitle{
    position: relative;
    bottom: 30px;
}